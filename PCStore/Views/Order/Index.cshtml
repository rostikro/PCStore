@model IEnumerable<PCStore.Models.Order>

@{
    ViewData["Title"] = "Замовлення";
}

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Status)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Reverse()) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Status)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Order" asp-route-id="@item.Id">Замовлення</a> |
                <a asp-action="GetReceipt" asp-controller="Order" asp-route-id="@item.Id">Накладна</a>
                @if (item.Status.Status == "Created")
                {
                    <span>|</span>
                    <a asp-action="Accept" asp-controller="Order" asp-route-id="@item.Id">Прийняти</a> <span>|</span>
                    <a asp-action="Decline" asp-controller="Order" asp-route-id="@item.Id" class="link-danger">Відхилити</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>