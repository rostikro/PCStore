@model PCStore.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<div class="wrapper">
    <div class="form-box register">
        <h2>Реєстрація</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <form asp-action="Register">
            <div class="input-box">
                <span asp-validation-for="Email"></span>
                <span class="icon">
                    <ion-icon name="mail"></ion-icon>
                </span>
                <input asp-for="Email" type="email" required>
                <label>Пошта</label>
            </div>
            <div class="input-box">
                <span asp-validation-for="Password"></span>
                <span class="icon">
                    <ion-icon name="lock-closed"></ion-icon>
                </span>
                <input asp-for="Password" type="password" required>
                <label>Пароль</label>
            </div>
            <div class="input-box">
                <span asp-validation-for="ConfirmPassword"></span>
                <span class="icon">
                    <ion-icon name="lock-closed"></ion-icon>
                </span>
                <input asp-for="ConfirmPassword" type="password" required>
                <label>Повторіть пароль</label>
            </div>
            <button type="submit" class="btn">Зареєструватись</button>
            <div class="login-register">
                <p>Вже маєте акаунт? <a asp-action="Login" class="login-link">Увійти в акаунт</a></p>
            </div>
        </form>
    </div>
</div>