@model PCStore.Models.User;

@{
    ViewData["Title"] = "Основна інформація";
}

<div class="account-page">
    <div class="container">
        <div class="col-sm-3">
            <h2>Мій акаунт</h2>
            <ul>
                <li class="active">
                    <a asp-action="PersonalInformation">Основна інформація</a>
                </li>
                <li>
                    <a asp-action="Addresses">Адреси</a>
                </li>
                <li>
                    <a asp-action="Orders">Замовлення</a>
                </li>
                <li>
                    <a asp-action="Logout" asp-controller="User" class="link-danger">Вийти з акаунта</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-9">
            <h2>Основна інформація</h2>
            <form asp-action="PersonalInformation">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Ім'я користувача</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn blue-btn" />
                </div>
            </form>
        </div>
    </div>
</div>